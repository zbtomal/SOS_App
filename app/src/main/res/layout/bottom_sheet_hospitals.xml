<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Hospital"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/btn_hospital_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital 1" />

    <Button
        android:id="@+id/btn_hospital_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital 2" />

    <Button
        android:id="@+id/btn_hospital_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital 3" />

    <Button
        android:id="@+id/btn_hospital_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital 4" />

    <Button
        android:id="@+id/btn_hospital_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital 5" />

</LinearLayout>
